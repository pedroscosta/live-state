{
  "name": "@live-state/sync",
  "version": "0.0.2",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "A sync engine with built-in client store and ORM.",
  "author": "Pedro Costa",
  "license": "Apache-2.0",
  "homepage": "https://github.com/pedroscosta/live-state",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedroscosta/live-state.git",
    "directory": "packages/live-state"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production tsup",
    "dev": "NODE_ENV=development tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit --project . && tsc --noEmit --project src/client",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.5",
    "@types/node": "^20.11.24",
    "@types/qs": "^6.14.0",
    "@types/react": "^18.2.62",
    "@types/react-dom": "^18.2.19",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "3.2.4",
    "cookie": "^1.0.2",
    "express": "^4.21.2",
    "jsdom": "^26.1.0",
    "react": "18.0.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "5.5.4",
    "ulid": "^3.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "crypto-hash": "^3.1.0",
    "idb": "^8.0.3",
    "kysely": "^0.28.2",
    "qs": "^6.14.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./src/server/index.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    },
    "./client": {
      "types": "./src/client/index.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.js"
    },
    "./client/fetch": {
      "types": "./src/client/fetch/index.ts",
      "import": "./dist/fetch-client.js",
      "require": "./dist/fetch-client.js"
    }
  },
  "peerDependencies": {
    "@types/react": ">=18.0.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    }
  }
}
