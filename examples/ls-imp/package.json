{
  "name": "@repo/ls-impl",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./src/schema.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/express-ws": "^3.0.5",
    "@types/node": "^20.11.24",
    "@types/ws": "^8.5.13",
    "tsup": "^8.0.2",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@live-state/sync": "workspace:*",
    "express-ws": "^5.0.2",
    "ws": "^8.18.0",
    "zod": "^4.1.9"
  }
}
