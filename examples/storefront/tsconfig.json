{
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["src", "next.config.js", "next-env.d.ts", ".next/types/**/*.ts"]
}
